{
    "parserOptions": {
        "parser": "babel-eslint",
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true,
            "experimentalObjectRestSpread": true
        }
    },

    "env": {
        "browser": true,
        "node": true
    },

    "rules": {
        "semi": "off",
        "comma-dangle": "off",
        "max-len": [2, {"code": 120, "tabWidth": 4, "ignoreUrls": true}],
        "react/prop-types": "off",
        "require-jsdoc": "off"
    },

    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "google"
    ]
}